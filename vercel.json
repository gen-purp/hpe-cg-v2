{
"version": 2,
"functions": {
"api/index.ts": {
"runtime": "nodejs20.x"
}
},
"builds": [
{ "src": "api/index.ts", "use": "@vercel/node" },
{ "src": "frontend/vite.config.ts", "use": "@vercel/static-build", "config": { "distDir": "frontend/dist" } }
],
"routes": [
{ "src": "/api/(.*)", "dest": "/api/index.ts" },
{ "src": "/(.*)", "dest": "/frontend/dist/$1" }
]
}